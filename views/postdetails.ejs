<header class="blog-header">
    <h1>Publiez, partagez, exprimez-vous ! </h1>
    <nav>
        <a href="/">home</a>
        <a href="/admin">admin</a>
    </nav>
</header>
<main>
    <section>
        <% 
            data.forEach(item => {
                %>
                    <article class="single-post">
                        <aside class="single-post_header">
                            <img alt="Avatar de l'auteur de la publication" src="<%= item.Avatar %>" />
                            <div>
                                <p><span><%- item.firstName %> <%- item.lastName %></span></p>
                                <p class="font14"><%- item.CreationTimestamp.toLocaleDateString() %></p>
                            </div>
                        </aside>

                        <h3 class="single-post_title"><%= item.Title %></h3>
                        <div class="single-post_body">
                            <p><%- item.Contents %></p>
                            <p><i class="fa-solid fa-comments"></i></p>
                        </div>
                    </article>
                <%
            })
        %> 
    </section>
    <div class="divider"></div>
</main>
<footer class="blog-footer">
    <p>Le blog qui tue la mouche !</p>
    <p>by Val√©rie</p>
</footer>