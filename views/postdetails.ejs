<header class="blog-header">
    <h1>Venez avec des cookies !</h1>
    <nav>
        <a href="/">home</a>
        <a href="/admin">admin</a>
    </nav>
</header>
<main>
    <section>
        <% 
            dataPost.forEach(item => {
                %>
                    <article class="single-post">
                        <aside class="single-post_header">
                            <img alt="Avatar de l'auteur de la publication" src="<%= item.Avatar %>" />
                            <div>
                                <p><span><%- item.FirstName %> <%- item.LastName %></span></p>
                                <p class="font14"><%- item.CreationTimestamp.toLocaleDateString() %></p>
                            </div>
                        </aside>

                        <h3 class="single-post_title"><%= item.Title %></h3>
                        <div class="single-post_body">
                            <p><%- item.Contents %></p>
                            <p><i class="fa-solid fa-heart fa-lg"></i></p>
                        </div>
                    </article>
                <%
            })
        %> 
    </section>

    <div class="divider"></div>

    <section>
        <%
            dataComments.forEach(comment => {
                %>
                    <article class="comments">
                        <aside>
                            <h3><%- comment.NickName %></h3>
                            <p class="font14"><%- comment.CreationTimestamp.toLocaleDateString() %></p>
                        </aside>
                        <p><%- comment.message %></p>
                    </article>
                <%
            })
        %>    
    </section>

</main>
<footer class="blog-footer">
    <p>Le blog qui tue la mouche !</p>
