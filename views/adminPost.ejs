<header class="blog-header">
  <h1>Venez avec des cookies !</h1>
  <nav>
    <a href="/">home</a>
    <a href="/admin">admin</a>
  </nav>
</header>
<main>
  <form action="" class="card-publish" method="post">
    <h2 class="home-publication-new">Publier quelque chose</h2>

    <label for="title">Titre :</label>
    <input id="title" name="title" type="text" placeholder="Titre" />

    <label for="content">Message :</label>
    <textarea
      id="content"
      name="content"
      type="text"
      placeholder="Votre message"
    ></textarea>

    <label for="author">Auteur :</label>
    <select name="author" id="author">
      <% author.forEach(author => { %>
      <option value="<%=author.Id %>">
        <%= author.FirstName %> <%= author.LastName %>
      </option>
      <% }) %>
    </select>

    <label for="category">Catégorie :</label>
    <select name="category" id="category">
      <% category.forEach(category => { %>
      <option value="<%=category.Id %>"><%= category.Name %></option>
      <% }) %>
    </select>

    <input type="submit" value="Publier" />
  </form>
</main>
<footer class="blog-footer">
  <p>Le blog qui tue la mouche !</p>
  <p>
    Coded with <i class="fa-solid fa-heart fa-lg"></i> by Ony Lalaina Valérie
  </p>
</footer>
